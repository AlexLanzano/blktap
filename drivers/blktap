/var/log/blktap/tapdisk.*.log {
    rotate 5
    missingok
    size 16M
    monthly
    sharedscripts
    postrotate
               /usr/bin/killall -HUP tapdisk
    endscript
    compress
}

/var/log/tapback/tapback*.log {
    sharedscripts
    missingok
    rotate 5
    size 16M
    weekly
    postrotate
        killall -HUP tapback
    endscript
    compress
    maxage 7
}
