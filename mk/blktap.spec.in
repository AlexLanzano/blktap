Summary: blktap user space utilities
Name: blktap
Version: @BLKTAP_VERSION@
Release: @BLKTAP_RELEASE@
License: Proprietary
Group: System/Hypervisor
Source0: %{name}-%{version}.tar.bz2
Source1: block-vhd.o
Source2: io-optimize.o
Source3: td.o
Source4: vhd-coalesce.o
Source5: vhd-fill.o
Source6: vhd-read.o
Source7: tapdisk-queue.o
Source8: tapdisk-filter.o
Source9: vhd-update.o
Source10: relative-path.o
Patch0: %{name}-development.patch
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-buildroot
Obsoletes: xen-blktap

%description
This package contains the blktap userspace utilities

%package devel
Summary: BlkTap Development Headers and Libraries
Requires: blktap = %{version}
Group: Development/Libraries
Obsoletes: xen-blktap

%description devel
This package contains the blktap development libraries and header files.

%prep
%setup -q
%patch0 -p1
cp %{SOURCE1} drivers
cp %{SOURCE2} drivers
cp %{SOURCE3} drivers
cp %{SOURCE4} drivers
cp %{SOURCE5} drivers
cp %{SOURCE6} drivers
cp %{SOURCE7} drivers
cp %{SOURCE8} drivers
cp %{SOURCE9} drivers
cp %{SOURCE10} drivers

%build
%{__make} USE_SYSTEM_LIBRARIES=y

%install
rm -rf $RPM_BUILD_ROOT
%{__make} install USE_SYSTEM_LIBRARIES=y DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%doc
%{_libdir}/libblktap.so.*
%{_sbindir}/blktapctrl
%{_sbindir}/tapdisk
%{_sbindir}/td-util
%{_sbindir}/lock-util
%{_sbindir}/vhd-update

%files devel
%defattr(-,root,root,-)
%doc
%{_includedir}/blktaplib.h
%{_libdir}/libblktap.a
%{_libdir}/libblktap.so

%changelog
